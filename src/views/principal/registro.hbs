<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Caracterización</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }

        form {
            max-width: 600px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 12px;
            box-sizing: border-box;
        }

        .question {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .add-question, .remove-question, .submit-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 10px;
        }

        .remove-question {
            background-color: #ff3333;
            margin-left: 10px;
        }

        .submit-button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

<form id="formulario">
    <div id="preguntas">
        <!-- Campos ya configurados -->
        <div class="question">
            <label>Pregunta de Texto:</label>
            <input type="text" name="pregunta-1">
        </div>
    </div>

    <button type="button" class="add-question" onclick="agregarPregunta('text')">Agregar Pregunta de Texto</button>
    <button type="button" class="add-question" onclick="agregarPregunta('radio')">Agregar Pregunta de Opción Múltiple</button>
    <button type="button" class="remove-question" onclick="eliminarUltimaPregunta()">Eliminar Última Pregunta</button>
    <button type="button" class="submit-button" onclick="enviarFormulario('/tu-ruta-especifica')">Enviar</button>
</form>

<script>
    function agregarPregunta(tipo) {
        var preguntasDiv = document.getElementById("preguntas");
        var nuevaPreguntaDiv = document.createElement("div");
        nuevaPreguntaDiv.classList.add("question");

        if (tipo === "text") {
            nuevaPreguntaDiv.innerHTML = `<label>Pregunta de Texto:</label><input type="text" name="preguntat-${preguntasDiv.childElementCount + 1}">`;
        } else if (tipo === "radio") {
            nuevaPreguntaDiv.innerHTML = `
                <label>Pregunta de Opción Múltiple:</label>
                <input type="radio" name="preguntam-${preguntasDiv.childElementCount + 1}" value="Opción 1"><label>Opción 1</label>
                <input type="radio" name="preguntam-${preguntasDiv.childElementCount + 1}" value="Opción 2"><label>Opción 2</label>
                <input type="radio" name="preguntam-${preguntasDiv.childElementCount + 1}" value="Opción 3"><label>Opción 3</label>`;
        }

        preguntasDiv.appendChild(nuevaPreguntaDiv);
    }

    function eliminarUltimaPregunta() {
        var preguntasDiv = document.getElementById("preguntas");
        if (preguntasDiv.children.length > 0) {
            preguntasDiv.removeChild(preguntasDiv.lastChild);
        }
    }

    function enviarFormulario(ruta) {
        var formulario = document.getElementById("formulario");
        var formData = new FormData(formulario);

        // Enviar los datos a la ruta específica en el servidor usando fetch
        fetch(ruta, {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => console.log(data))
        .catch(error => console.error('Error:', error));
    }
</script>

</body>
</html>
