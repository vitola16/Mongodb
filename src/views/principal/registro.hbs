<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generador de Formulario</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }

        form {
            max-width: 800px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 12px;
            box-sizing: border-box;
        }

        .question {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .button-container {
            margin-bottom: 20px;
        }

        .button-container button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
            transition: background-color 0.3s;
        }

        .button-container button:hover {
            background-color: #45a049;
        }

        .remove-question, .submit-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 10px;
            transition: background-color 0.3s;
        }

        .remove-question:hover, .submit-button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

<form id="formulario">
    <div id="preguntas">
        <!-- Campos ya configurados -->
        <div class="question">
            <label>Consumo promedio del Equipos:</label>
            <input type="text" name="consumo">
        </div>
        <div class="question">
            <label>Seleccione el tipo de Equipo:</label>
            <select name="tipos">
                <option value="Opción 1">Congelador</option>
                <option value="Opción 2">Aire Acondicionado</option>
                <option value="Opción 3">Neveras</option>
            </select>
        </div>
    </div>

    <div class="button-container">
        <button type="button" onclick="agregarPregunta('text')">Pregunta de Texto</button>
        <button type="button" onclick="agregarPregunta('select')">Pregunta de Selección</button>
        <!-- Puedes agregar más botones para tipos de preguntas adicionales aquí -->
    </div>

    <button type="button" class="remove-question" onclick="eliminarUltimaPregunta()">Eliminar Última Pregunta</button>
    <button type="button" class="submit-button" onclick="enviarFormulario()">Enviar</button>
</form>

<script>
    function agregarPregunta(tipo) {
        var preguntasDiv = document.getElementById("preguntas");
        var nuevaPreguntaDiv = document.createElement("div");
        nuevaPreguntaDiv.classList.add("question");

        if (tipo === "text") {
            nuevaPreguntaDiv.innerHTML = `<label>Pregunta de Texto:</label><input type="text" name="pregunta-${preguntasDiv.childElementCount + 1}">`;
        } else if (tipo === "select") {
            nuevaPreguntaDiv.innerHTML = `<label>Pregunta de Selección:</label>
                <select name="pregunta-${preguntasDiv.childElementCount + 1}">
                    <option value="Opción 1">Opción 1</option>
                    <option value="Opción 2">Opción 2</option>
                    <option value="Opción 3">Opción 3</option>
                </select>`;
        }

        preguntasDiv.appendChild(nuevaPreguntaDiv);
    }

    function eliminarUltimaPregunta() {
        var preguntasDiv = document.getElementById("preguntas");
        if (preguntasDiv.children.length > 0) {
            preguntasDiv.removeChild(preguntasDiv.lastChild);
        }
    }

    function enviarFormulario() {
       form action="/guardarsensor" method="POST"
    }
</script>

</body>
</html>

